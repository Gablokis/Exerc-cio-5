<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabela nomes</title>
    <script>
        let nomes = [];
        let indice = 1;
    
        while (true) {
            let nome = prompt("Digite um nome (ou cancele para finalizar):");
            if (nome === null) {
                break;
            }
            nomes.push(nome);
        }
    
        if (nomes.length > 0) {
            document.write('<table>');
            document.write('<tr><th>√çndice</th><th>Nome</th></tr>');
            nomes.forEach((nome) => {
                document.write(`<tr><td>${indice++}</td><td>${nome}</td></tr>`);
            });
            document.write('</table>');
        } else {
            alert("Nenhum nome foi digitado.");
        }
    </script>
</head>
<body>
    
</body>
